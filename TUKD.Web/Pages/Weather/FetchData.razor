@page "/fetchdata"
@inject WeatherForecastViewModel _vm

<BaseCrudLayout VM="_vm" T="WeatherForecast" TF="FetchDataForm" TFilter="FetchDataFilterForm">
    <HeaderContentChild>
        <MudTh>Date</MudTh>
        <MudTh>Temp. (C)</MudTh>
        <MudTh>Temp. (F)</MudTh>
        <MudTh>Summary</MudTh>
    </HeaderContentChild>
    <RowTemplateChild>
        <MudTd DataLabel="Date"><MudLink Href="#" Underline="Underline.Always">@context.Date?.ToString("dd/MM/yyyy hh:mm:ss")</MudLink></MudTd>
        <MudTd DataLabel="Temperature (C)">@context.TemperatureC</MudTd>
        <MudTd DataLabel="Temperature (F)">@context.TemperatureF</MudTd>
        <MudTd DataLabel="Summary">@context.Summary</MudTd>
    </RowTemplateChild>
</BaseCrudLayout>